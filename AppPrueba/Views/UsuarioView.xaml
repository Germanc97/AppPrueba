<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="AppPrueba.Views.UsuarioView">
    <ContentPage.Content>

        <StackLayout Margin="10,100,10,0">
            <Label Text="{Binding Usuario1.Identificacion, StringFormat='Identificacion: {0}'}"></Label>
            <Label Text="{Binding Usuario1.Nombre, StringFormat='Nombre: {0}'}"></Label>
            <Label Text="{Binding Usuario1.Apellido, StringFormat='Apellido: {0}'}"></Label>
            <Label Text="{Binding Usuario1.Edad, StringFormat='Edad: {0}'}"></Label>
            <Label Text="{Binding Usuario1.Pass, StringFormat='Pass: {0}'}"></Label>
            <Label Text="{Binding Usuario1.Email, StringFormat='Email: {0}'}"></Label>
            <Label Text="{Binding DatoGuardado}" FontSize="30"></Label>
            <Button Text="Actualizar" Command="{Binding GuardarDatosCommand}"></Button>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>
